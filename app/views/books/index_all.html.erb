<div class="d-flex justify-content-between align-items-center">
  <h1>All Books</h1>
  <% if @current_user %>
    <%= link_to 'Add New Book', new_book_path, class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'Add New Book', sign_in_path, class: "btn btn-primary" %>
  <% end %>
</div>

<!-- Render the partial for all books -->
<%= render partial: "book_list", locals: { books: @published_books, user: nil } %>
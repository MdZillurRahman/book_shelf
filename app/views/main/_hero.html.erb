<div class="row my-3">
  <div class="col-12">
    <div class="position-relative d-flex flex-column align-items-center justify-content-center gap-3 gap-lg-4 min-vh-50 p-4 rounded" style="height: 500px;">
      <img 
        src="https://cdn.usegalileo.ai/sdxl10/519b26b6-3e16-443d-a2bd-819883cfc043.png" 
        alt="Your personal library" 
        class="img-fluid rounded w-100 h-100 position-absolute top-0 start-0 opacity-50" 
        style="object-fit: cover; z-index: 0;">
      <div class="text-center text-black position-relative" style="z-index: 1;">
        <h1 class="fs-2 fs-lg-1 fw-bold mb-2">
          Your personal library, reinvented
        </h1>
        <h2 class="fs-6 fs-lg-5 fw-normal">
          Spend less time managing your books and more time reading them.
        </h2>
      </div>
      <div class="d-flex flex-wrap justify-content-center gap-2 position-relative" style="z-index: 1;">
        <% if Current.user %>
          <%= link_to "Explore", explore_path, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "Log in", sign_in_path, class: "btn btn-primary" %>
          <%= link_to "SignUp", sign_up_path, class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>